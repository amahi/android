<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.Amahi" parent="@style/Theme.AppCompat.NoActionBar">
		<item name="android:windowBackground">@color/background_primary</item>
		<item name="android:colorAccent">@color/accent_material_dark</item>
		<item name="android:textColorPrimaryInverse">@color/primary_text_material_light</item>
	</style>

	<style name="Theme.Amahi.Fullscreen" parent="@style/Theme.AppCompat.NoActionBar">
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="Theme.Amahi.Settings" parent="@android:style/Theme.Material">
		<item name="android:actionBarStyle">@style/Theme.Amahi.ActionBar</item>
		<item name="android:windowBackground">@color/background_primary</item>
		<item name="android:colorAccent">@color/accent_material_dark</item>
		<item name="android:textColorPrimaryInverse">@color/primary_text_material_light</item>
	</style>

	<style name="Theme.Amahi.ActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
		<item name="android:background">@drawable/bg_action_bar</item>
		<item name="android:displayOptions">homeAsUp|showTitle</item>
	</style>

</resources>