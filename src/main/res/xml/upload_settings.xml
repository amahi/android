<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:icon="@drawable/ic_server"
        android:enabled="false"
        android:key="@string/preference_key_upload_server"
        android:summary="@string/preference_summary_server"
        android:title="@string/preference_title_upload_server" />

    <ListPreference
        android:icon="@drawable/ic_share"
        android:enabled="true"
        android:key="@string/preference_key_upload_share"
        android:summary="@string/preference_summary_share"
        android:title="@string/preference_title_upload_share" />

    <org.amahi.anywhere.util.CustomEditTextPreference
        android:icon="@drawable/ic_upload_location"
        android:defaultValue="/"
        android:inputType="text"
        android:key="@string/preference_key_upload_location"
        android:summary="@string/preference_summary_location"
        android:title="@string/preference_title_upload_location"
        android:textColor="@color/primary_text"/>

    <SwitchPreference
        android:icon="@drawable/ic_cellular_data"
        android:defaultValue="false"
        android:key="@string/preference_key_upload_data"
        android:title="@string/preference_title_upload_data" />

    <SwitchPreference
        android:icon="@drawable/ic_switch"
        android:defaultValue="false"
        android:key="@string/preference_key_upload_switch" />

</PreferenceScreen>
